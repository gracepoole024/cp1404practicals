BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.5
        TextInput:
            size_hint_x: 0.6
            id: input_miles
            on_text: app.get_miles()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            Button:
                text: "Up"
                on_press: app.handle_increment(1)
            Button:
                text: "Down"
                on_press: app.handle_increment(-1)
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Convert miles to kim"
            on_press: app.handle_calculations()
        Label:
            id:output_label
            text: app.message

